@model Cumulative_Project1.Models.Teacher
@{
    ViewBag.Title = "Show";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/List">Back To Teachers</a>
        <a class="dellink" href="/Teacher/DeleteConfirm/@Model.TeacherId">Delete</a>
        <a class="navlink" href="/Teacher/Update/@Model.TeacherId">Update</a>
    </nav>
    <h2>Teacher Details</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>First Name</dt>
            <dd>@Model.TeacherFName</dd>

            <dt>Last Name</dt>
            <dd>@Model.TeacherLName</dd>

            <dt>Employee Number</dt>
            <dd>@Model.EmployeeNumber</dd>

            <dt>Hire Date</dt>
            <dd>@Model.HireDate.ToShortDateString()</dd>

            <dt>Salary</dt>
            <dd>@Model.Salary</dd>
        </dl>
    </div>
</div>

