@model Cumulative_Project1.Models.Teacher
@{
    ViewBag.Title = "Update";
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    #containershow {
        width: 50%;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    nav {
        margin-bottom: 20px;
    }

    .navlink {
        text-decoration: none;
        color: #007BFF;
        font-weight: bold;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .inputrow {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"],
    input[type="date"],
    input[type="number"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    input[type="submit"] {
        background-color: #007BFF;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        width: 100%;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>


<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.TeacherId">Back</a>
    </nav>
    <h2>Update Teacher</h2>
    <form method="POST" action="/Teacher/Edit/@Model.TeacherId" class="newTeacher" onsubmit="return ValidateTeacher();">
        <div class="inputrow">
            <label for="TeacherFName">First Name:</label>
            <input type="text" id="TeacherFName" name="TeacherFName" value="@Model.TeacherFName" />
        </div>
        <div class="inputrow">
            <label for="TeacherLName">Last Name:</label>
            <input type="text" id="TeacherLName" name="TeacherLName" value="@Model.TeacherLName" />
        </div>
        <div class="inputrow">
            <label for="EmployeeNumber">Employee Number:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" value="@Model.EmployeeNumber" />
        </div>
        <div class="inputrow">
            <label for="HireDate">Hire Date:</label>
            <input type="date" id="HireDate" name="HireDate" value="@Model.HireDate.ToString("yyyy-MM-dd")" />
        </div>
        <div class="inputrow">
            <label for="Salary">Salary:</label>
            <input type="number" step="0.01" id="Salary" name="Salary" value="@Model.Salary" />
        </div>
        <div class="inputrow">
            <input type="submit" value="Update Teacher" />
        </div>
    </form>
</div>


@{
    <script src="~/Scripts/teacher.js">
    </script>
}


